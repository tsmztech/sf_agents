# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Test Mode Flag (Optional)
# Set to True to use .env configuration and bypass UI popup
# Set to False to use UI configuration popup (default)
USE_ENV_CONFIG=False

# Salesforce Configuration (Client Credentials Flow - Recommended)
SALESFORCE_INSTANCE_URL=https://your-instance.salesforce.com
SALESFORCE_CLIENT_ID=your_connected_app_client_id
SALESFORCE_CLIENT_SECRET=your_connected_app_client_secret
SALESFORCE_DOMAIN=login

# Legacy Salesforce Configuration (Username-Password Flow)
# Only needed if Client Credentials Flow is not enabled on your Connected App
# SALESFORCE_USERNAME=your_username
# SALESFORCE_PASSWORD=your_password
# SALESFORCE_SECURITY_TOKEN=your_security_token

# Application Configuration
DEBUG=True
LOG_LEVEL=INFO

# Salesforce API Configuration
SALESFORCE_API_VERSION=v58.0
SALESFORCE_CONNECTION_TIMEOUT=30
SALESFORCE_RETRY_ATTEMPTS=3
