# OpenAI Configuration (Required)
OPENAI_API_KEY=your_openai_api_key_here

# Salesforce Client Credentials Flow (Recommended - Only 3 fields needed!)
SALESFORCE_INSTANCE_URL=https://your-instance.salesforce.com
SALESFORCE_CLIENT_ID=your_connected_app_client_id
SALESFORCE_CLIENT_SECRET=your_connected_app_client_secret

# Legacy Username-Password Flow (Optional - for backward compatibility)
# SALESFORCE_USERNAME=your_salesforce_username
# SALESFORCE_PASSWORD=your_salesforce_password
# SALESFORCE_SECURITY_TOKEN=your_security_token

# Salesforce Settings
SALESFORCE_API_VERSION=v58.0
SALESFORCE_DOMAIN=login  # Use 'test' for sandbox, 'login' for production
SALESFORCE_CONNECTION_TIMEOUT=30
SALESFORCE_RETRY_ATTEMPTS=3

# Application Settings
DEBUG=True
LOG_LEVEL=INFO
